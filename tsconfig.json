{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "_config/*": ["src/config/*"],
      "_database/*": ["src/database/*"],
      "_errors/*": ["src/errors/*"],
      "_middlewares/*": ["src/middlewares/*"],
      "_models/*": ["src/models/*"],
      "_repositories/*": ["src/repositories/*"],
      "_services/*": ["src/services/*"],
      "_shared/*": ["src/shared/*"],
      "_utils/*": ["src/utils/*"]
    }
  }
}
